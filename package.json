{
  "name": "projektinz",
  "version": "1.0.0",
  "private": true,
  "description": "",
  "license": "ISC",
  "author": "",
  "type": "module",
  "scripts": {
    "build": "concurrently \"pnpm --filter shared build\" \"pnpm --filter server build\" \"pnpm --filter client build\"",
    "build:client": "pnpm --filter client build",
    "build:server": "pnpm --filter server build",
    "build:shared": "pnpm --filter @projektinz/shared build",
    "clean": "concurrently \"pnpm --filter server clean\" \"pnpm --filter client clean\" \"pnpm --filter shared clean\"",
    "clean:all": "concurrently \"pnpm --filter server clean:all\" \"pnpm --filter client clean:all\" \"pnpm --filter shared clean:all\" && rm -rf node_modules",
    "clean:client": "pnpm --filter client clean",
    "clean:restart": "pnpm clean:all && pnpm install",
    "clean:server": "pnpm --filter server clean",
    "clean:shared": "pnpm --filter shared clean",
    "dev": "concurrently \"pnpm --filter server dev\" \"pnpm --filter client dev\"",
    "dev:client": "pnpm --filter client dev",
    "dev:server": "pnpm --filter server dev",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,css,scss,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,css,scss,md}\"",
    "lint:check": "eslint \"**/*.{ts,tsx,mts,cts,cjs,mjs,js,jsx,md}\"",
    "lint:fix": "eslint --fix \"**/*.{ts,tsx,mts,cts,cjs,mjs,js,jsx,md}\"",
    "prepare": "husky",
    "test": "concurrently \"pnpm --filter server test\" \"pnpm --filter client test\"",
    "test:client": "pnpm --filter client test",
    "test:server": "pnpm --filter server test",
    "test:watch": "concurrently \"pnpm --filter server test:watch\" \"pnpm --filter client test:watch\""
  },
  "lint-staged": {
    "*.{ts,mts,cts,tsx,js,mjs,cjs,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,css,scss,md}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@eslint/js": "^9.25.0",
    "@types/eslint-plugin-tailwindcss": "^3.17.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.0.3",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "@typescript-eslint/eslint-plugin": "^8.34.1",
    "@typescript-eslint/parser": "^8.34.1",
    "concurrently": "^9.1.2",
    "eslint": "^9.25.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "eslint-plugin-unicorn": "^59.0.1",
    "globals": "^16.0.0",
    "husky": "^9.1.7",
    "jest": "^30.0.2",
    "jiti": "^2.4.2",
    "lint-staged": "^16.1.2",
    "prettier": "^3.5.3",
    "prettier-plugin-organize-imports": "^4.1.0",
    "prettier-plugin-packagejson": "^2.5.15",
    "prettier-plugin-sort-json": "^4.1.1",
    "prettier-plugin-tailwindcss": "^0.6.12",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.4.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.34.1"
  },
  "packageManager": "pnpm@9.6.0+sha1.65cd48c20dd329b7f455088b6dd17d4d5b6d02e3"
}
